%table
  - @tracks.each_with_index do |track, i|
    %tr
      %td
        = "#{i + 1}. "
      %td
        = link_to(truncate(track.title, length: 57) || "ID", track.url)
      %td
        = (track.posted_on - 6.hours).strftime("Posted on %B %d at %-l:%M %p")
      %td
        - name = track.user.name.split(" ")
      %td
        = "by #{name.first} #{name.last[0]}."
